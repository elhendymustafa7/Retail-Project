@using Retail_Api.Models;
@model Stock
@{
    ViewData["Title"] = "Edit Stocks";
}

<div  class="mt-4">
    <h3>Edit</h3>
    <form asp-controller="Stocks" asp-action="Editx" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="productName"> Name</label>
            <input type="text" asp-for="Name" value="@Model.Name" class="form-control" >
        </div>
        <div class="form-group">
            <label for="productName">Address</label>
            <input type="text" asp-for="Address" value="@Model.Address" class="form-control" >
        </div>
        <div class="form-group">
            <label for="productName"> capacity</label>
            <input type="text" asp-for="capacity" value="@Model.capacity" class="form-control" >
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div